<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.springframework.org/schema/beans

http://springframework.org/schema/beans/spring-beans.xsd">


	<bean id='data_bean' class ='info.example.beans.DataBean' scope ='prototype'/>
	
	<bean id ='bean' class='info.example.beans.MyBean1'>
		<property name = 'list1'>
			<list>
				<value>문자열1</value>
				<value>문자열2</value>
				<value>문자열3</value>			
			</list>
		</property>
		<property name = 'list2'>
			<list>
				<value type='int'>100</value>
				<value type='int'>200</value>
				<value type='int'>300</value>			
			</list>
		</property>
		<property name = 'list3'>
		<!-- Set은 기본적으로 중복을 허용하지 않은 컬렉션이다. -->
			<set>
				<bean class ='info.example.beans.DataBean'/>
				<bean class ='info.example.beans.DataBean'/>
				<!--  ref 태그는 빈의 id로 빈을 찾는다. -->
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
			</set>
		</property>
		
		<property name = 'set1'>
			<set>
				<value>문자열1</value>
				<value>문자열2</value>
				<value>문자열3</value>	
				<value>문자열3</value>
				<value>문자열3</value>		
			</set>
		</property>
		<property name = 'set2'>
			<set>
				<value type='int'>100</value>
				<value type='int'>200</value>
				<value type='int'>300</value>
				<value type='int'>300</value>	
				<value type='int'>300</value>				
			</set>
		</property>
		<property name = 'set3'>
			<set>
				<bean class ='info.example.beans.DataBean'/>
				<bean class ='info.example.beans.DataBean'/>
				<!--  ref 태그는 빈의 id로 빈을 찾는다. -->
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
			</set>
		</property>
		
		<property name = 'map1'>
			<map>
				<entry key = "a1" value ='문자열'/>
				<entry key = "a2" value ='100' value-type ='int'/>
				<entry key = "a3">
					<bean class ='info.example.beans.DataBean'/>
				</entry>
				<entry key = "a4" value-ref="data_bean"/>
				<entry key = "a5">
					<list>
						<value>문자열1</value>
						<value>문자열2</value>
						<value>문자열3</value>	
					</list>
				</entry>
			</map>
			
		</property>
		
		<property name = 'prop1'>
			<set>
				<bean class ='info.example.beans.DataBean'/>
				<bean class ='info.example.beans.DataBean'/>
				<!--  ref 태그는 빈의 id로 빈을 찾는다. -->
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
				<ref bean = 'data_bean'/>
			</set>
		</property>
		<!--  이어서 작성하기 ㅅㅂ.. -->
		
	</bean>
		
</beans>